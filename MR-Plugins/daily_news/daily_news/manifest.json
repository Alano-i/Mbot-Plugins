{
  "name": "daily_news",
  "title": "每天60秒读懂世界",
  "author": "Alano",
  "description": "获取每日新闻（可选【每日新闻】或【影视资讯】）和天气，封面跟随当天天气情况，实时变化。",
  "version": "0.5",
  "requirements": [],
  "configField": [
    {
      "fieldName": "uid",
      "fieldType": "Enum",
      "label": "推送用户",
      "helperText": "选择接收推送的用户,需在用户管理页独立设置推送配置",
      "enumValuesRef": "UserList",
      "multiValue": true
    },
    {
      "fieldName": "channel",
      "fieldType": "Enum",
      "label": "推送通道",
      "helperText": "选择推送通道，可选择独立的微信应用通知（需先在设置中添加额外的微信通道）",
      "enumValuesRef": "ChannelNameList",
      "multiValue": false
    },
    {
      "fieldName": "city",
      "fieldType": "String",
      "label": "设置城市，用于查询天气，例: 北京",
      "helperText": "",
      "defaultValue": "北京"
    },
    {
      "fieldName": "key",
      "fieldType": "String",
      "label": "和风天气 API KEY",
      "helperText": "在 https://dev.qweather.com 申请 KEY，创建项目后进入控制台新建项目然后添加 KEY",
      "defaultValue": ""
    },
    {
      "fieldName": "news_type",
      "fieldType": "Enum",
      "label": "每日新闻类型",
      "helperText": "",
      "enumValues": [
        {
          "name": "热点新闻",
          "value": "daily"
        },
        {
          "name": "热点影视快讯",
          "value": "entertainment"
        }
      ],
      "defaultValue": "1",
      "multiValue": false
    }
  ],
  "logoUrl": "/plugins/daily_news/logo.jpg",
  "githubUrl": "",
  "helpDocUrl": "https://github.com/Alano-i/wecom-notification/tree/main/MR-Plugins/daily_news",
  "payImageUrl": "https://p.xmoviebot.com/donate/alano_wechat.jpg",
  "dependencies": {
    "appVersion": ">=1.9.30"
  }
}
